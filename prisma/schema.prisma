generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("pgsql://sats@localhost:5432/sats")
}

model User {
  id         Int     @id @default(autoincrement())
  authId     String  @unique
  givenName  String
  familyName String
  isAdmin    Boolean
}

model Student {
  id           Int    @id @default(autoincrement())
  registration String
  givenName    String
  familyName   String

  tutor   Tutor @relation(fields: [tutorId], references: [id])
  tutorId Int

  biometricData String
}

model Tutor {
  id      Int       @id @default(autoincrement())
  Student Student[]

  givenName   String
  familyName  String
  phoneNumber String
  email       String
}
