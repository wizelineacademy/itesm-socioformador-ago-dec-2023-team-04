{
  "ts-node": {
    "compilerOptions": {
       "module": "es2015",
        "moduleResolution": "node"
      }
 },
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
